package sec04_exam02;

public class KeyCodeExample {

	public static void main(String[] args) throws Exception {
		int keyCode;
		
		keyCode = System.in.read();
		System.out.println("keyCode: " + keyCode);
		
		keyCode = System.in.read();
		System.out.println("keyCode: " + keyCode);
		
		keyCode = System.in.read();
		System.out.println("keyCode: " + keyCode);
 // throws = 예외처리 -아직안배움
	}

}

// 콘솔에서 a 입력후 엔터치면 밑에 결과나옴
// keyCode: 97
// keyCode: 13 (엔터임ㅎㅎ)
// keyCode: 10 (엔터임ㅎㅎ)